	<h2 align="center">
		Список льгот
	</h2>
	<table>
		<% @benefits.each do |benefit| %>
			<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
				<td>
					<%= "#{benefit.title} #{benefit.description}"%>
				</td>
				<td class="list_description">
				<dl>
					<%= benefit.coefficient %>
				</td>
				<td class="list_actions">
					<%= link_to 'Show', benefit %><br/>
					<%= link_to 'Edit', edit_benefit_path(benefit) %><br/>
					<%= link_to 'Destroy', benefit,
					confirm: 'Are you sure?',
					method: :delete %>
				</td>
			</tr>
		<% end %>
	</table>
<br />
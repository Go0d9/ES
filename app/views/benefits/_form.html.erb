<%= form_for(@benefit) do |f| %>
	<% if @benefit.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@benefit.errors.count, "error") %>
			prohibited this benefit from being saved:</h2>
			<ul>
				<% @benefit.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="field">
		<%= f.label "Название" %><br />
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label "Описание" %><br />
		<%= f.text_field :description %>
	</div>
	<div class="field">
		<%= f.label "Коэффициент" %><br />
		<%= f.text_field :coefficient %>
	</div>
	
	<div class="actions">
		<%= f.submit "Применить"%>
	</div>
<% end %>
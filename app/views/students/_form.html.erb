<%= form_for @student do |f| %>
  <%= f.label "Фамилия" %>
  <%= f.text_field :second_name %>

  <%= f.label "Имя" %>
  <%= f.text_field :first_name %>

  <%= f.label "Отчество" %>
  <%= f.text_field :middle_name %>

  <%= f.label "Группа" %>
  <%= f.text_field :group %>
  </br>
  Льготы студента:
    <ul>
      <% @benefits.each do |benefit| %>
        <%= hidden_field_tag('seen[]', benefit.id) -%>
        <%= check_box_tag 'activated[]', benefit.id -%>
        <%= label_tag(benefit.title) %><br/>          
      <% end %>
    </ul>
  <%= f.submit "Выполнить", :disable_with => 'Выполняется...' %>
<% end %>
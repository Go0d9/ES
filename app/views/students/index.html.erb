	<h2 align="center">
		Список студентов
	</h2>
	<table>
		<% @students.each do |student| %>
			<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
				<td>
					<%= "#{student.second_name} #{student.first_name} #{student.middle_name}"%>
				</td>
				<td class="list_description">
				<dl>
					<%= student.group %>
				</td>
				<td class="list_description">
				<dl>
					<%= student.possibility %>
				</td>
				<td class="list_actions">
					<%= link_to 'Показать', student %><br/>
					<%= link_to 'Редактировать', edit_student_path(student) %><br/>
					<%= link_to 'Удалить', student,
					confirm: 'Вы уверенны в этом?',
					method: :delete %>
				</td>
			</tr>
		<% end %>
	</table>
<br />